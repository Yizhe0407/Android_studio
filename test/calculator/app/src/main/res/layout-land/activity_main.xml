<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_background"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/summand"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_textview"
            android:gravity="center"
            android:text="@string/textview"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/operator"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/textview"
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/addend"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_textview"
            android:gravity="center"
            android:text="@string/textview"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/equal2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/equal"
            android:textColor="#000000"
            android:textSize="25dp"
            tools:layout_editor_absoluteX="48dp"
            tools:layout_editor_absoluteY="64dp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_textview"
            android:gravity="center"
            android:text="@string/textview"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/lazy1"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_corner_white"
        android:text="@string/lazy1"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/gridLayout"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toEndOf="@+id/gridLayout3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/lazy3"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_corner_white"
        android:text="@string/lazy3"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/guideline9"
        app:layout_constraintEnd_toStartOf="@+id/gridLayout"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toEndOf="@+id/gridLayout3"
        app:layout_constraintTop_toBottomOf="@+id/lazy2"
        app:layout_constraintVertical_bias="0.118" />

    <Button
        android:id="@+id/lazy2"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/round_corner_white"
        android:text="@string/lazy2"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/gridLayout"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toEndOf="@+id/gridLayout3"
        app:layout_constraintTop_toBottomOf="@+id/lazy1" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp"
        app:columnCount="2"
        app:layout_constraintBottom_toTopOf="@+id/guideline9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/guideline5"
        app:orientation="vertical"
        app:rowCount="2">

        <Button
            android:id="@+id/delete"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="@dimen/layout_width"
            android:layout_height="@dimen/layout_height"
            android:layout_margin="10dp"
            android:background="@drawable/round_corner_white"
            android:text="@string/delete"
            android:textColor="#000000"
            android:textSize="34sp"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/multiplication"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="@dimen/layout_width"
            android:layout_height="@dimen/layout_height"
            android:layout_margin="10dp"
            android:background="@drawable/round_corner_white"
            android:text="@string/multiplication"
            android:textColor="#000000"
            android:textSize="34sp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/equal"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="@dimen/layout_width"
            android:layout_height="@dimen/layout_height"
            android:layout_margin="10dp"
            android:background="@drawable/round_corner_white"
            android:text="@string/equal"
            android:textColor="#000000"
            android:textSize="34sp"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            tools:layout_editor_absoluteX="653dp"
            tools:layout_editor_absoluteY="146dp" />

        <Button
            android:id="@+id/division"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="@dimen/layout_width"
            android:layout_height="@dimen/layout_height"
            android:layout_margin="10dp"
            android:background="@drawable/round_corner_white"
            android:text="@string/division"
            android:textColor="#000000"
            android:textSize="34sp"
            app:layout_column="1"
            app:layout_row="1" />

    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        app:columnCount="2"
        app:layout_constraintBottom_toTopOf="@+id/guideline9"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline5"
        app:orientation="vertical"
        app:rowCount="2">

        <Button
            android:id="@+id/C"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="@dimen/layout_width"
            android:layout_height="@dimen/layout_height"
            android:layout_margin="10dp"
            android:background="@drawable/round_corner_white"
            android:text="@string/C"
            android:textColor="#000000"
            android:textSize="34sp"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="72dp" />

        <Button
            android:id="@+id/one"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="@dimen/layout_width"
            android:layout_height="@dimen/layout_height"
            android:layout_margin="10dp"
            android:background="@drawable/round_corner_white"
            android:text="@string/one"
            android:textColor="#000000"
            android:textSize="34sp"
            app:layout_column="1"
            app:layout_row="0"
            tools:layout_editor_absoluteX="578dp"
            tools:layout_editor_absoluteY="107dp" />

        <Button
            android:id="@+id/plus"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="@dimen/layout_width"
            android:layout_height="@dimen/layout_height"
            android:layout_margin="10dp"
            android:background="@drawable/round_corner_white"
            android:text="@string/plus"
            android:textColor="#000000"
            android:textSize="34sp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/minus"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="@dimen/layout_width"
            android:layout_height="@dimen/layout_height"
            android:layout_margin="10dp"
            android:background="@drawable/round_corner_white"
            android:text="@string/minus"
            android:textColor="#000000"
            android:textSize="34sp"
            app:layout_column="1"
            app:layout_row="1"
            tools:layout_editor_absoluteX="185dp"
            tools:layout_editor_absoluteY="90dp" />

    </androidx.gridlayout.widget.GridLayout

        >

    <EditText
        android:id="@+id/editText"
        android:layout_width="346dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/round_edittext_light"
        android:focusable="false"
        android:inputType="textMultiLine"
        android:lines="2"
        android:padding="12dp"
        android:scrollbars="vertical"
        android:text="@string/editText1"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.724" />

    <ImageButton
        android:id="@+id/mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="#00000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dark_mode_black_36dp" />


    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:orientation="vertical">

    </androidx.gridlayout.widget.GridLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.500684" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.43" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.96" />


</androidx.constraintlayout.widget.ConstraintLayout>